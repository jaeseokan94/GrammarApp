<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.spanishgrammarapp.LearnActivity"
    android:background="@drawable/bkg2">

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rowCount="2"
        android:columnCount="5">

        <ImageButton
            android:id="@+id/button_greetings"
            android:background="@drawable/greetings"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:enabled="true"
            android:tag="Greetings"
            android:onClick="enterTopic" />

        <ImageButton
            android:id="@+id/button_checking_in"
            android:background="@drawable/checkin"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:enabled="true"
            android:tag="Checking-in"
            android:onClick="enterTopic"/>

        <ImageButton
            android:id="@+id/button_sightseeing"
            android:background="@drawable/sight"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:singleLine="true"
            android:enabled="true"
            android:tag="Sightseeing"
            android:onClick="enterTopic"/>

        <ImageButton
            android:id="@+id/button_directions"
            android:background="@drawable/directions"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:enabled="true"
            android:tag="Directions"
            android:onClick="enterTopic"/>

        <ImageButton
            android:id="@+id/button_eating"
            android:background="@drawable/eating"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:enabled="true"
            android:tag="Eating"
            android:onClick="enterTopic"/>

        <ImageButton
            android:id="@+id/button_likes"
            android:background="@drawable/likes"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:enabled="true"
            android:tag="Likes"
            android:onClick="enterTopic"/>

        <ImageButton
            android:id="@+id/button_planning"
            android:background="@drawable/planning"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:enabled="true"
            android:tag="Planning"
            android:onClick="enterTopic"/>

        <ImageButton
            android:id="@+id/button_shopping"
            android:background="@drawable/shopping"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:enabled="true"
            android:tag="Shopping"
            android:onClick="enterTopic"/>

        <ImageButton
            android:id="@+id/button_dating"
            android:background="@drawable/dating"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_columnSpan="1"
            android:layout_rowSpan="1"
            android:enabled="true"
            android:tag="Dating"
            android:onClick="enterTopic"/>
    </GridLayout>
</RelativeLayout>
