<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bkg"
    tools:context="com.example.spanishgrammarapp.ResourcesActivity">

    <ImageButton
        android:layout_width="100"
        android:layout_height="100"
        android:id="@+id/imageButton"
        android:background="@drawable/alphabet"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="100"
        android:layout_height="100"
        android:id="@+id/imageButton2"
        android:layout_marginTop="40dp"
        android:background="@drawable/numbers"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100"
        android:layout_height="100"
        android:id="@+id/imageButton3"
        android:layout_marginTop="40dp"
        android:background="@drawable/week"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />



    <ImageButton
        android:layout_width="100"
        android:layout_height="100"
        android:id="@+id/imageButton4"
        android:background="@drawable/calender"
        android:layout_below="@+id/imageButton"
        android:layout_marginTop="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageButton
        android:layout_width="100"
        android:layout_height="100"
        android:id="@+id/imageButton5"
        android:background="@drawable/festivals"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100"
        android:layout_height="100"
        android:id="@+id/imageButton6"
        android:background="@drawable/seasons"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3" />

    <ImageButton
        android:layout_width="100"
        android:layout_height="100"
        android:id="@+id/imageButton7"
        android:background="@drawable/clock"
        android:layout_below="@+id/imageButton4"
        android:layout_marginTop="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <ImageButton
        android:layout_width="110"
        android:layout_height="25"
        android:id="@+id/imageButton10"
        android:background="@drawable/alphabet2"
        android:layout_below="@+id/imageButton"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2" />

    <ImageButton
        android:layout_width="110"
        android:layout_height="25"
        android:id="@+id/imageButton11"
        android:background="@drawable/numbers2"
        android:layout_below="@+id/imageButton2"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="110"
        android:layout_height="25"
        android:id="@+id/imageButton12"
        android:background="@drawable/week2"
        android:layout_below="@+id/imageButton3"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3" />

    <ImageButton
        android:layout_width="110"
        android:layout_height="25"
        android:id="@+id/imageButton13"
        android:background="@drawable/calender2"
        android:layout_below="@+id/imageButton4"
        android:layout_alignRight="@+id/imageButton5"
        android:layout_alignEnd="@+id/imageButton5" />

    <ImageButton
        android:layout_width="110"
        android:layout_height="25"
        android:id="@+id/imageButton14"
        android:background="@drawable/festivals2"
        android:layout_below="@+id/imageButton5"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="110"
        android:layout_height="25"
        android:id="@+id/imageButton15"
        android:background="@drawable/seasons2"
        android:layout_below="@+id/imageButton6"
        android:layout_alignLeft="@+id/imageButton6"
        android:layout_alignStart="@+id/imageButton6" />

    <ImageButton
        android:layout_width="110"
        android:layout_height="25"
        android:id="@+id/imageButton16"
        android:background="@drawable/clock2"
        android:layout_below="@+id/imageButton7"
        android:layout_alignRight="@+id/imageButton7" />

</RelativeLayout>
