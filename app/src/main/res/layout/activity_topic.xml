<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/subtitle_subtopics"
        android:id="@+id/tv_subtopic_title"
        android:gravity="center_horizontal"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/btn_situational_video"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_layout_id"
        android:weightSum="1"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:layout_below="@+id/tv_subtopic_title"
        android:layout_alignParentStart="true">
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tv_topic"
        android:layout_marginBottom="35dp"
        android:layout_above="@+id/tv_situational_video_title"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/planning2"
        android:id="@+id/imageView"
        android:layout_marginTop="26dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_subtopic_title" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_situational_video"
        android:background="@drawable/button1"
        android:id="@+id/btn_situational_video"
        android:onClick="enterSituationalVideo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tv_situational_video_title"
        android:layout_alignStart="@+id/tv_subtopic_title"
        android:layout_marginStart="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/subtitle_situational_video"
        android:id="@+id/tv_situational_video_title"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />


</RelativeLayout>