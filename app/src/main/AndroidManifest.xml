<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spanishgrammarapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        >

        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>
        <activity
            android:name=".MainFragment"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />

        <activity
            android:name=".LanguageActivity"
            android:label="@string/title_activity_learn"></activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_learn"></activity>
        <activity
            android:name=".LevelActivity"
            android:label="@string/title_activity_learn"></activity>
        <activity
            android:name=".LearnActivity"
            android:label="@string/title_activity_learn"></activity>
        <activity
            android:name=".PracticeActivity"
            android:label="@string/title_activity_practice"></activity>
        <activity
            android:name=".ReviseActivity"
            android:label="@string/title_activity_revise"></activity>
        <activity
            android:name=".ResourcesActivity"
            android:label="@string/title_activity_resources"></activity>
        <activity
            android:name=".GlossaryActivity"
            android:label="@string/title_activity_glossary"></activity>
        <activity
            android:name=".ExercisesActivity"
            android:label="@string/title_activity_exercises"></activity>
        <activity
            android:name=".SubtopicsActivity"
            android:label="@string/title_activity_subtopics"></activity>
        <activity
            android:name=".TopicActivity"
            android:label="@string/title_activity_topics"></activity>
        <activity
            android:name=".SituationalVideoActivity"
            android:label="@string/title_activity_situational_video"></activity>
        <activity
            android:name=".GrammarVideoActivity"
            android:label="@string/title_activity_grammar_video"></activity>
        <activity android:name=".ListeningComprehension"></activity>

    </application>

</manifest>
